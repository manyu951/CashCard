<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    tools:context=".Sell">


    <!-- Spinner (List) -->
    <Spinner
        android:id="@+id/spinnerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/CardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerList"
        android:layout_marginBottom="8dp"
        android:hint="Enter Gift Card Code" />

    <EditText
        android:id="@+id/CardCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CardNumber"
        android:layout_marginBottom="8dp"
        android:hint="Gift Card Pin" />

    <EditText
        android:id="@+id/sellingPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CardCode"
        android:layout_marginBottom="8dp"
        android:hint="Selling Price" />

    <EditText
        android:id="@+id/actualPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellingPrice"
        android:layout_marginBottom="8dp"
        android:hint="Actual Price" />


    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="412dp"
        android:layout_below="@id/actualPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"

        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button_Sell"
        android:layout_width="381dp"
        android:layout_height="48dp"
        android:layout_below="@id/datePicker"
        android:layout_marginTop="5dp"
        android:background="@color/teal_200"
        android:text="SELL NOW" />


</RelativeLayout>