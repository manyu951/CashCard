<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@color/teal_700"></TextView>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttons_layout"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add your content views here inside the ScrollView -->

            <TextView
                android:id="@+id/button_Amazon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="AMAZON"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_Flipkart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="FLIPKART"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_Myntra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="MYNTRA"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_JioMart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="JIO MART"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_BigBasket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="BIGBASKET"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_MakeMyTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="MAKE MY TRIP"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_Swiggy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="SWIGGY"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_Zomato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="ZOMATO"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_Yatra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="Yatra"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_Ajio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="AJIO"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_Blinkit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="Blinkit"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/button_Dominos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/teal_200"
                android:text="DOMINOS"
                android:textSize="25sp"
                android:textStyle="italic"/>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/button_Sell"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="Sell"/>

        <Button
            android:id="@+id/button_profile"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="Profile"/>

    </LinearLayout>

</RelativeLayout>